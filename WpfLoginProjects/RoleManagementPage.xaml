<Page x:Class="WpfLoginProjects.RoleManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfLoginProjects"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Role Management">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Hàng cho tiêu đề -->
            <RowDefinition Height="*"/>
            <!-- Hàng cho bảng dữ liệu, chiếm hết phần còn lại -->
        </Grid.RowDefinitions>

        <!-- Tiêu đề của trang -->
        <TextBlock Text="Role Management" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   Grid.Row="0"/>

        <!-- Bảng hiển thị danh sách các vai trò -->
        <DataGrid x:Name="RolesDataGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <!-- Cột hiển thị ID của vai trò -->
                <DataGridTextColumn Header="ID" Binding="{Binding RoleID}" Width="100"/>

                <!-- Cột hiển thị Tên của vai trò -->
                <DataGridTextColumn Header="Role Name" Binding="{Binding RoleName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>