<Window x:Class="WpfLoginProjects.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLoginProjects"
        mc:Ignorable="d"
        Title="Store Management System" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Menu chính của ứng dụng, nằm ở trên cùng -->
        <Menu DockPanel.Dock="Top" FontSize="14">
            <!-- MỤC MỚI: Menu cho các chức năng chính -->
            <MenuItem Header="_Actions">
                <MenuItem x:Name="MenuCreateOrder"
                          Header="_Create New Order" 
                          Click="CreateOrderMenuItem_Click" 
                          FontWeight="Bold">
                    <MenuItem.Icon>
                        <Image Source="/Assets/add-order.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Management">
                <MenuItem x:Name="MenuProducts" Header="_Products" Click="ProductMenuItem_Click"/>
                <MenuItem x:Name="MenuCategories" Header="_Categories" Click="CategoryMenuItem_Click"/>
                <Separator/>
                <!-- Đặt tên cho các MenuItem cần phân quyền -->
                <MenuItem x:Name="MenuCustomers" Header="_Customers" Click="CustomerMenuItem_Click"/>
                <MenuItem x:Name="MenuOrders" Header="_Orders" Click="OrderMenuItem_Click"/>
                <Separator/>
                <MenuItem x:Name="MenuEmployees" Header="_Employees" Click="EmployeeMenuItem_Click"/>
                <MenuItem x:Name="MenuRoles" Header="_Roles" Click="RoleMenuItem_Click"/>
                
            </MenuItem>

            <!-- MỤC MỚI: Menu cho báo cáo -->
            <MenuItem Header="_Reports">
                <MenuItem Header="_Dashboard" 
                           Click="DashboardMenuItem_Click"
                           FontWeight="Bold">
                    <MenuItem.Icon>
                        <Image Source="/Assets/dashboard.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_File">
                <MenuItem x:Name="LogoutMenuItem" Header="_Logout" Click="LogoutMenuItem_Click"/>
                <MenuItem x:Name="ExitMenuItem" Header="_Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Thanh trạng thái, nằm ở dưới cùng -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="WelcomeMessageText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Khu vực chính để hiển thị nội dung các Page -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

    </DockPanel>
</Window>