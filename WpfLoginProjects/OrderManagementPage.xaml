<Page x:Class="WpfLoginProjects.OrderManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfLoginProjects"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderManagementPage">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Order Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Grid.Row="0"/>

        <!-- THÊM THUỘC TÍNH MOUSE DOUBLE CLICK VÀO ĐÂY -->
        <DataGrid x:Name="OrdersDataGrid" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  MouseDoubleClick="OrdersDataGrid_MouseDoubleClick">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderID}" Width="80"/>
                <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate, StringFormat='g'}" Width="150"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding OrderStatus}" Width="120"/>
                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat='C'}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>