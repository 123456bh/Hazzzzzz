<Page x:Class="WpfLoginProjects.CategoryManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfLoginProjects"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Category Management">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Category Management" 
                   FontSize="24" FontWeight="Bold" 
                   Margin="0,0,0,20" Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <!-- Danh sách -->
                <ColumnDefinition Width="Auto" />
                <!-- Đường kẻ -->
                <ColumnDefinition Width="1*" />
                <!-- Form -->
            </Grid.ColumnDefinitions>

            <!-- Cột 0: Bảng danh mục và nút Thêm mới -->
            <DockPanel Grid.Column="0">
                <Button x:Name="btnAddNew" DockPanel.Dock="Top" Content="Add New Category" 
                        Width="140" HorizontalAlignment="Left" Margin="0,0,0,10"
                        Click="btnAddNew_Click"/>

                <DataGrid x:Name="CategoriesDataGrid" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          SelectionChanged="CategoriesDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding CategoryID}" Width="50"/>
                        <DataGridTextColumn Header="Category Name" Binding="{Binding CategoryName}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>

            <!-- Cột 1: Đường kẻ phân cách -->
            <GridSplitter Grid.Column="1" Width="5" Background="LightGray" HorizontalAlignment="Stretch"/>

            <!-- Cột 2: Form chi tiết -->
            <Border Grid.Column="2" Padding="15" Background="#F9F9F9">
                <StackPanel x:Name="DetailsPanel">
                    <TextBlock Text="Category Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,15" TextDecorations="Underline"/>

                    <Label Content="Category Name:"/>
                    <TextBox x:Name="txtCategoryName" Margin="0,0,0,15" Padding="5"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button x:Name="btnSave" Content="Save" Width="90" Height="30" Margin="0,0,10,0" Click="btnSave_Click"/>
                        <Button x:Name="btnDelete" Content="Delete" Width="90" Height="30" Click="btnDelete_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>