<Page x:Class="WpfLoginProjects.EmployeeManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfLoginProjects"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="950"
      Title="EmployeeManagementPage"
      Loaded="Page_Loaded">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Employee Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Grid.Row="0"/>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Cột cho DataGrid -->
                <ColumnDefinition Width="15"/>
                <!-- Cột đệm -->
                <ColumnDefinition Width="1*"/>
                <!-- Cột cho Form chi tiết -->
            </Grid.ColumnDefinitions>

            <!-- Cột bên trái: Danh sách nhân viên -->
            <DataGrid x:Name="EmployeesDataGrid" 
                      Grid.Column="0"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      SelectionChanged="EmployeesDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Code" Binding="{Binding EmployeeCode}" Width="80"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="150"/>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="120"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding RoleName}" Width="100"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="110"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Cột bên phải: Form để Thêm/Sửa nhân viên -->
            <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="EmployeeForm">
                        <TextBlock Text="Employee Details" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <TextBlock Text="Employee Code:" FontWeight="SemiBold"/>
                        <TextBox x:Name="EmployeeCodeTextBox" Margin="0,2,0,10"/>

                        <TextBlock Text="Full Name:" FontWeight="SemiBold"/>
                        <TextBox x:Name="FullNameTextBox" Margin="0,2,0,10"/>

                        <TextBlock Text="Position:" FontWeight="SemiBold"/>
                        <TextBox x:Name="PositionTextBox" Margin="0,2,0,10"/>

                        <TextBlock Text="Username:" FontWeight="SemiBold"/>
                        <TextBox x:Name="UsernameTextBox" Margin="0,2,0,10"/>

                        <TextBlock Text="Email:" FontWeight="SemiBold"/>
                        <TextBox x:Name="EmailTextBox" Margin="0,2,0,10"/>

                        <TextBlock Text="Phone Number:" FontWeight="SemiBold"/>
                        <TextBox x:Name="PhoneNumberTextBox" Margin="0,2,0,10"/>

                        <TextBlock Text="Role:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="RoleComboBox" Margin="0,2,0,15" DisplayMemberPath="RoleName" SelectedValuePath="RoleID"/>

                        <TextBlock Text="Note: The password will be set to a default value for new employees. They will be prompted to change it on first login." 
                                   TextWrapping="Wrap" FontStyle="Italic" Foreground="Gray" Margin="0,0,0,15"/>

                        <!-- Các nút hành động cho Form -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button x:Name="ClearButton" Content="Clear" Margin="0,0,10,0" Padding="15,5" Click="ClearButton_Click"/>
                            <Button x:Name="DeleteButton" Content="Delete" Margin="0,0,10,0" Padding="15,5" Background="IndianRed" Foreground="White" Click="DeleteButton_Click"/>
                            <Button x:Name="SaveButton" Content="Save" Padding="20,5" FontWeight="Bold" Background="DodgerBlue" Foreground="White" Click="SaveButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>